{
    "name": "i7/e-commerce",
    "description": "E-commerce application",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "stripe/stripe-php": "^18.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
