# Database Configuration
DB_HOST=localhost
DB_NAME=ecommerce_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/e-commerce

# Session Configuration
SESSION_LIFETIME=8000
SESSION_SECURE=false

# Security Settings
ENCRYPTION_KEY=your-secret-encryption-key-here
HASH_ALGORITHM=sha256

# Email Configuration (if needed)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM_ADDRESS=noreply@ecommerce.com
MAIL_FROM_NAME=E-Commerce

# Payment Gateway (if needed)
PAYMENT_MODE=test
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET_KEY=your-payment-secret-key

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Pagination
ITEMS_PER_PAGE=10

# API Settings
API_RATE_LIMIT=100
API_TIMEOUT=30
